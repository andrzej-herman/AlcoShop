
@inject IAlcoService AlcoService

@if (AlcoTypes != null)
{
    <div class="search-bar">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-12">
                <RadzenText>Nazwa</RadzenText>
                <RadzenTextBox Class="w-100" @bind-Value="@SearchText" />
            </div>
            <div class="col-lg-2 col-md-2 col-sm-6">
                <RadzenText>Cena min.</RadzenText>
                <RadzenTextBox Class="w-100" />
            </div>
            <div class="col-lg-2 col-md-2 col-sm-6">
                <RadzenText>Cena max.</RadzenText>
                <RadzenTextBox Class="w-100" />
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-6 col-md-8 col-sm-12">
                <RadzenText>Wybierz typ</RadzenText>
                <RadzenDropDown AllowClear="true" TValue="string" Class="w-100"
                                Data="@AlcoTypes" />
            </div>
            <div class="col-lg-3 col-md-2 col-sm-6">
                <RadzenText>Poj min.</RadzenText>
                <RadzenTextBox Class="w-100" />
            </div>
            <div class="col-lg-3 col-md-2 col-sm-6">
                <RadzenText>Poj max.</RadzenText>
                <RadzenTextBox Class="w-100" />
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <RadzenButton Shade="Shade.Dark" Text="Szukaj" ButtonStyle="ButtonStyle.Success" class="w-100" Click="SendSerchData"/>
            </div>
        </div>
    </div>

}
else
{
    <p>Loading ...</p>
}




@code {

    IEnumerable<string> AlcoTypes { get; set; }

    private string SearchText { get; set; }

    protected override void OnInitialized()
    {
        AlcoTypes = AlcoService.GetAlcoTypes();
    }

    void SendSerchData()
    {
        
    }        
 }
